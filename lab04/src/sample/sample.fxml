<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.DatePicker?>
<GridPane fx:controller="sample.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">

    <!--<Label text="Hello world!" GridPane.columnIndex="0" GridPane.rowIndex="1"/>-->

    <Text text="Username:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <TextField id="userNameField" promptText="Username" fx:id="userNameField" GridPane.columnIndex="1"
               GridPane.rowIndex="2" />
    <Text text="Password:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
    <TextField id="passwordField" promptText="Password" fx:id="passwordField" GridPane.columnIndex="1"
               GridPane.rowIndex="3" />
    <Text text="Full Name:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
    <TextField id="fullNameField" promptText="Full Name" fx:id="fullNameField" GridPane.columnIndex="1"
               GridPane.rowIndex="4" />
    <Text text="E-Mail:" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
    <TextField id="emailField" promptText="E-Mail" fx:id="emailField" GridPane.columnIndex="1" GridPane.rowIndex="5" />
    <Text text="Phone #:" GridPane.columnIndex="0" GridPane.rowIndex="6"/>
    <TextField id="phoneNumberField" promptText="Phone #" fx:id="phoneNumberField" GridPane.columnIndex="1"
               GridPane.rowIndex="6" />
    <Text text="Date of Birth:" GridPane.columnIndex="0" GridPane.rowIndex="7"/>
    <DatePicker id="datePicker" fx:id="datePicker" GridPane.columnIndex="1" GridPane.rowIndex="7" />
    <Button id="registerBtn" fx:id="registerBtn" onAction="#btnOnPress" text="Register" GridPane.columnIndex="1"
            GridPane.rowIndex="8" />
</GridPane>